<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="d-flex flex-column gap-2 justify-content-center align-items-center align-middle mb-2">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <div class="card">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :username, class: 'form-label' %><br />
      <%= f.text_field :username, autocomplete: "username", class: 'form-control' %>
    </div>

    <div class="d-flex gap-2 justify-content-center align-items-center align-middle flex-column">
      <% if resource.avatar.attached? %>
        <%= image_tag resource.avatar.variant(resize: "100x100!"), class: "rounded" %>
      <% end %>
      <%= f.label :avatar, class: 'form-label' %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>

    <%= f.fields_for(:settings) do |setting| %>

      <div class="form-check">
        <%= setting.check_box :auto_subscribe, checked: resource.auto_subscribe, class: 'form-check-input' %>
        <%= setting.label :auto_subscribe, "Auto-subscribe to threads on post", class: 'form-check-label' %>
      </div>

      <div class="form-check">
        <%= setting.check_box :new_window, checked: resource.new_window, class: 'form-check-input' %>
        <%= setting.label :new_window, "Open links in posts in a new window by default", class: 'form-check-label' %>
      </div>

    <% end %>

    <div class="field">
      <%= f.label :username, class: 'form-label' %><br />
      <%= f.text_field :username, autocomplete: "username", class: 'form-control' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: 'form-label' %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'form-label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: 'form-label' %> <i>(we need your current password to confirm any changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>

  </div>
<% end %>

<div class="d-flex flex-column gap-2 justify-content-center align-items-center align-middle mb-2">
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></p>

  <%= link_to "Back", :back, class: 'btn btn-secondary' %>
</div>