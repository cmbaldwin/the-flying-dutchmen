<% if @forum_threads.none? %>

    <div><%= t('search_not_found') %>. <%= t('check_out') %> <%= link_to t('latest_questions'), fora.forum_threads_path %> <%= t('instead') %> </div>

<% else %>

    <%= render partial: "fora/forum_threads/forum_thread", collection: @forum_threads, spacer_template: "shared/spacer" %>

  <div class="forum-threads-nav text-center">
    <%= will_paginate @forum_threads, url_builder: fora, renderer: Fora::BootstrapLinkRenderer %>
  </div>

<% end %>
